        // *** EDIT THIS LINE TO CHANGE THE EMAIL EVERYWHERE ***
        const supportEmail = "contact.parobible@gmail.com";

        // This function will run once the document is loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Find all elements that need the email address and update them
            const emailElements = document.querySelectorAll('.support-email');
            emailElements.forEach(function(element) {
                element.textContent = supportEmail;
            });
        });
    </script>

